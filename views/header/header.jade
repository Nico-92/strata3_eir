div(data-ng-controller="headerController" ng-cloak)
	//- Mobile
	.row.hidden-md.hidden-lg
		.col-sm-12.header-mobile
			img.logo(src="/assets/images/eir-logo.gif" alt="eir logo")
			button.c-hamburger.c-hamburger--htx(ng-click="mobileMenuOpen = !mobileMenuOpen")
				span Toggle menu
	.row.hidden-md.hidden-lg.menu-container(ng-show="mobileMenuOpen")
		.col-sm-12.col-xs-12
			ul
				li(ng-repeat="element in menu")
					.row(ng-click="showSubmenu = !showSubmenu")
						.col-sm-10
							span {{element.label}}
						.col-sm-2.text-right
							span 
								i.fa.fa-chevron-down(ng-show="!showSubmenu" aria-hidden="true")
								i.fa.fa-chevron-up(ng-show="showSubmenu" aria-hidden="true")
					.row.mobileSubmenu(ng-show="showSubmenu")
						ul
							li(ng-repeat="element in menu[selectedMenu].submenu")
								| {{element}}
		.col-sm-3.col-xs-3.text-center
			a
				| eir home
		.col-sm-3.col-xs-3.text-center
			a
				| eir business
		.col-sm-3.col-xs-3.text-center
			a
				| my eir
		.col-sm-3.col-xs-3.text-center
			a
				| webmail
	//- Desktop
	.row.hidden-xs.hidden-sm.header.header-top
		.col-md-offset-2.col-md-4
			a
				| eir home
			a
				| eir business
		.col-md-4.text-right
			a
				| my eir
			a
				| webmail
	.row.hidden-xs.hidden-sm.header.header-menu
		.col-md-offset-2.col-md-2
			img(src="/assets/images/eir-logo.gif" alt="eir logo")
		.col-md-6.text-right
			ul
				li(ng-repeat="element in menu" ng-click="select($index,0)" ng-class="{active: $index == selectedMenu}")
					| {{element.label}}
	.row.hidden-xs.hidden-sm.header.header-submenu
		.col-md-offset-2.col-md-8.text-right
			ul
				li(ng-repeat="element in menu[selectedMenu].submenu" ng-click="select($index,1)" ng-class="{active: $index == selectedSubMenu}")
					| {{element}}