.row.footer(ng-controller="footerController")
	.col-md-offset-2.col-md-8.background-image
		.row.text-right.back-to-top
			i.fa.fa-chevron-up.fa-lg
			| Back to top
		.row
			.col-md-custom(ng-repeat="element in menu")
				span.menu-label{{element.label}}
				ul.menu-body
					li(ng-repeat="innerElement in element.submenu")
						{{innerElement.label}}
		.row.text-center.social-icons
			a(href="https://www.facebook.com/eir" target="_blank")
				i.fa.fa-facebook.fa-2x
			a(href="https://twitter.com/eir" target="_blank")
				i.fa.fa-twitter.fa-2x
			a(href="https://plus.google.com/+eir" target="_blank")
				i.fa.fa-google-plus.fa-2x
		.row.footer-menu
			ul.list-unstyled.list-inline.text-center
				li
					a(href="https://www.eir.ie/group/pricing/") Pricing
